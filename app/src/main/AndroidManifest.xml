<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.composetutorial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeTutorial">
        <activity
            android:name=".composebasic.AnimationComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_animation_compose"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".composebasic.MainActivity2"
            android:exported="true"></activity>
        <activity
            android:name=".composebasic.ConstraintInComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_constraint_in_compose"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar">

        </activity>
        <activity
            android:name=".composebasic.ListComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_list_compose"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar" />
        <activity
            android:name=".composebasic.TextButtonsAndAthotherComposablesActivity"
            android:exported="true"
            android:label="@string/title_activity_text_buttons_and_athother_composables"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar" />
        <activity
            android:name=".composebasic.StateCompose"
            android:exported="true"
            android:label="@string/title_activity_state_compose"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar" />
        <activity
            android:name=".composebasic.TextActivityCompose"
            android:exported="true"
            android:label="@string/title_activity_text_compose"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar" />
        <activity
            android:name=".composebasic.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeTutorial.NoActionBar" />
    </application>

</manifest>